{% extends '_themes/sneat/base.html.twig' %}

{% set title = 'Rol' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="card mb-4">
        <div class="card-body d-flex">
            <h4 class="fw-bold mb-0 align-self-center"><span class="text-muted fw-light">
                    <a class="text-muted" href="{{ path('app_rol_index') }}">{{ title }}</a>
                    /</span> Datos del rol</h4>
        </div>
    </div>
    <div class="">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ rol.nombre }}</td>
                        </tr>
                        {% if rol.descripcion %}
                            <tr>
                                <th>Descripcion</th>
                                <td>{{ rol.descripcion }}</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>Identificador</th>
                            <td>
                                <span class="badge bg-label-primary me-1">{{ rol.identificador }}</span>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}