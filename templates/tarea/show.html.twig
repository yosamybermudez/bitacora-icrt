{% extends '_themes/sneat/base.html.twig' %}

{% set title = 'Tarea' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="card mb-4">
        <div class="card-body d-flex">
            <h4 class="fw-bold mb-0 align-self-center"><span class="text-muted fw-light">
                    <a class="text-muted" href="{{ path('app_tarea_index') }}">{{ title }}</a>
                    /</span> Datos de la tarea</h4>
            <ul class="nav nav-pills flex-column flex-md-row-reverse ms-auto">
                {% if is_granted('ROLE_JEFE_INFORMATICA') %}
                    {% include 'includes/form_delete_show.html.twig' with {'path' : 'app_tarea_delete', 'entity' : tarea } %}
                    <li class="nav-item">
                        <a class="nav-link bg-secondary text-white" href="{{ path('app_tarea_edit', {'id': tarea.id }) }}">Editar</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div class="">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th>Título</th>
                            <td>{{ tarea.titulo }}</td>
                        </tr>
                        <tr>
                            <th>Descripción</th>
                            <td>{{ tarea.descripcion | raw }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}