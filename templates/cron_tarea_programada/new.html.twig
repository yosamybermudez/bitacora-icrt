{% extends '_themes/sneat/base.html.twig' %}

{% set title = 'Cron - Tarea programada' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="card mb-4">
        <div class="card-body d-flex">
            <h4 class="fw-bold mb-0 align-self-center"><span class="text-muted fw-light">{{ title }} /</span> Datos de la tarea</h4>
            <ul class="nav nav-pills flex-column flex-md-row-reverse ms-auto">
                <li class="nav-item ms-2">
                    <button type="submit" class="nav-link bg-primary text-white">Confirmar</button>
                </li>
                <li class="nav-item">
                    <a class="nav-link bg-secondary text-white" href="{{ app.request.headers.get('referer') is null ? app.request.headers.get('referer') : path('app_cron_tarea_programada_index') }}">Cancelar</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-xxl">
        <div id="card-holder" class="row">
            <div>
                <div class="card mb-4">
                    <div class="card-body">
                        {{ form_widget(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
