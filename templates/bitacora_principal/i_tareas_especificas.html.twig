<div class="p-2 flex-fill">
    <div class="card h-100 bg-light text-dark">
        <h5 class="card-header text-primary">
            <span class="bx bx-task align-self-center pe-2"></span> Tareas espec√≠ficas
        </h5>
        <div class="card-body">
            {% if tareas_especificas %}
            <div class="list-group w-auto">
                {% for tarea in tareas_especificas %}
                    <a href="{{ path('app_tarea_show', {'id': tarea.id}) }}" class="list-group-item list-group-item-action d-flex gap-2 py-2 border-0 text-gray" aria-current="true">
                        <div class="d-flex gap-2 w-100">
                            {% set icon = tarea.asignadoA|length == 0 ? 'bxs-group' : 'bxs-user' %}
                            <span class="bx {{ icon }} align-self-center"></span>
                            <div class="flex-grow-1">
                                <p class="mb-0">{{ tarea.tarea.titulo }}</p>
                                <p class="mb-0 opacity-75"></p>
                            </div>
                        </div>
                    </a>
                    </a>
                {% endfor %}
            </div>
            {% else %}
                <p class="text-gray">
                    No existen tareas pendientes
                </p>
            {% endif %}
        </div>
    </div>
</div>