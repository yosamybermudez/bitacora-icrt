{% extends '_themes/sneat/base.html.twig' %}

{% block title %}Tablero{% endblock %}

{% block content %}
    <h4 class="fw-bold py-3 mb-4">Tablero</h4>

    <div class="d-flex flex-row mb-3">
        {% include 'bitacora_principal/i_guardia_hoy.html.twig' %}
        {% include 'bitacora_principal/i_tareas_hoy.html.twig' %}
    </div>
    <div class="d-flex flex-row mb-3">
        {% include 'bitacora_principal/i_incidencias.html.twig' %}
        {% include 'bitacora_principal/i_tareas_especificas.html.twig' %}
    </div>
    <div class="d-flex flex-row mb-3">
        {% include 'bitacora_principal/i_calendar.html.twig' %}
    </div>
{% endblock %}

{% block top_styles %}
    <link rel="stylesheet" href="{{ asset('assets/fullcalendar/css/core/main.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/fullcalendar/css/daygrid/main.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/fullcalendar/css/timegrid/main.min.css') }}">
{% endblock %}

{% block top_scripts %}
    <script src="{{ asset('assets/fullcalendar/js/core/main.min.js') }}"></script>
    <script src="{{ asset('assets/fullcalendar/js/interaction/main.min.js') }}"></script>
    <script src="{{ asset('assets/fullcalendar/js/daygrid/main.min.js') }}"></script>
    <script src="{{ asset('assets/fullcalendar/js/timegrid/main.min.js') }}"></script>
    <script src="{{ asset('build/sneat/js/calendar.js') }}"></script>
    <script type="text/javascript">
        renderCalendar('{{ path('app_calendario_fetch_eventos') }}');
    </script>
{% endblock %}
